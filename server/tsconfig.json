{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "@controller/*": ["./src/controller/*"]
    },
  },
  "include": ["src/**/*", "src/**/*.ts"],
  "exclude": ["node_modules"]
}